{
  "Constructor": {
    "prefix": "ctor",
    "body": [
      "public ${1:ClassName}()",
      "{",
      "    // Constructor logic here",
      "    $0",
      "}"
    ],
    "description": "Creates a basic constructor"
  },
  "Property - Auto": {
    "prefix": "prop",
    "body": [
      "public ${1:type} ${2:Property} { get; set; }$0"
    ],
    "description": "Creates an auto-implemented property"
  },
  "Method": {
    "prefix": "method",
    "body": [
      "public ${1:void} ${2:MethodName}()",
      "{",
      "    // Method logic here",
      "    $0",
      "}"
    ],
    "description": "Creates a public method"
  },
  "Console.WriteLine": {
    "prefix": "cw",
    "body": [
      "Console.WriteLine(${1:message});$0"
    ],
    "description": "Prints to the console"
  },
  "If statement": {
    "prefix": "if",
    "body": [
      "if (${1:condition})",
      "{",
      "    // Code to execute if the condition is true",
      "    $0",
      "}"
    ],
    "description": "Creates an if statement"
  },
  "For loop": {
    "prefix": "for",
    "body": [
      "for (int i = 0; i < ${1:length}; i++)",
      "{",
      "    // Loop body",
      "    $0",
      "}"
    ],
    "description": "Creates a for loop"
  },
  "try-catch": {
    "prefix": "try",
    "body": [
      "try",
      "{",
      "    // Code that might throw an exception",
      "    $0",
      "}",
      "catch (Exception ex)",
      "{",
      "    // Handle the exception",
      "    Console.WriteLine(\"Error: \" + ex.Message);",
      "}"
    ],
    "description": "Creates a try-catch block"
  },
  "Class": {
    "prefix": "class",
    "body": [
      "public class ${1:ClassName}",
      "{",
      "    $0",
      "}"
    ],
    "description": "Creates a class"
  }
}
